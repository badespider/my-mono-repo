# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=mongodb://localhost:27017/portfolio-tracker

# Security
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# CORS
