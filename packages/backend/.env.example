# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=mongodb://localhost:27017/portfolio-tracker

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Virtuals Protocol Configuration  
VIRTUALS_API_KEY=your-virtuals-api-key
VIRTUALS_BASE_URL=https://api.virtuals.io/v1

# Multi-Agent System Configuration (intervals in milliseconds)
MONITORING_AGENT_INTERVAL=60000
ANALYSIS_AGENT_INTERVAL=300000
REBALANCING_AGENT_INTERVAL=900000
ALERT_AGENT_INTERVAL=30000

# AI/LLM Configuration (for agents)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Portfolio Management
DEFAULT_REBALANCE_THRESHOLD=0.05
MAX_POSITION_SIZE=0.3
MIN_TRADE_AMOUNT=0.001

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourapp.com

# Redis (for caching and agent coordination)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
