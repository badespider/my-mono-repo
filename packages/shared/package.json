{
  "name": "@org/shared",
  "version": "1.0.0",
  "description": "Shared utilities, types, and components for the monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/rename-cjs.cjs",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test": "jest"
  },
  "keywords": [
    "shared",
    "utilities",
    "types"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": "^0.73.4",
    "@solana/web3.js": "^1.95.0",
    "@solana/wallet-adapter-react": "^0.15.0",
    "@solana/wallet-adapter-base": "^0.9.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    },
    "@solana/web3.js": {
      "optional": false
    },
    "@solana/wallet-adapter-react": {
      "optional": false
    },
    "@solana/wallet-adapter-base": {
      "optional": false
    }
  }
}
